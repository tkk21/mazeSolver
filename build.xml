<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="all" name="Maze">
	<property environment="env"/>
	<property name="junit.output.dir" value="junit"/>
	<property name="debuglevel" value="source,lines,vars"/>
	<property name="target" value="1.7"/>
	<property name="source" value="1.7"/>
	<path id="JUnit 4.libraryclasspath"> <!-- where are our jars? -->
		<pathelement location="junit.jar"/>
		<pathelement location="org.hamcrest.core_1.1.0.v20090501071000.jar"/>
	</path>
	<path id="Maze.classpath">
		<pathelement location="bin"/> <!-- where do we put compiled bits? -->
		<path refid="JUnit 4.libraryclasspath"/>
	</path>
	
	<target name="all" depends="build,clean">
	</target>
	
	<target name="build">
		<mkdir dir="bin"/>
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/> <!-- where are our source files stored? -->
			<classpath refid="JUnit 4.libraryclasspath"/> <!-- import JUnit library so we can compile JUnit test cases! -->
            <classpath refid="Maze.classpath"/> 
        </javac>
    </target>
	<target name="clean">
        <delete dir="bin"/>
    </target>
	<target name="run">
        <java classname="Main" failonerror="true" fork="yes">
            <classpath refid="Maze.classpath"/> <!-- so we can find our compiled bits! -->
        </java>
    </target>
	
	<target name="test" depends="CoordinateTest">
    </target>
	
	<target name="CoordinateTest" depends="MazeBuilderTest">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="test.CoordinateTest" todir="${junit.output.dir}"/>
            <classpath refid="Maze.classpath"/>
        </junit>
    </target>

	<target name="MazeBuilderTest" depends="MazeDirectionTest">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="test.MazeBuilderTest" todir="${junit.output.dir}"/>
            <classpath refid="Maze.classpath"/>
        </junit>
    </target>
	
	<target name="MazeDirectionTest" depends="MazeNodeTest">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="test.MazeDirectionTest" todir="${junit.output.dir}"/>
            <classpath refid="Maze.classpath"/>
        </junit>
    </target>

	<target name="MazeNodeTest" depends="MazePathSolverTest">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="test.MazeNodeTest" todir="${junit.output.dir}"/>
            <classpath refid="Maze.classpath"/>
        </junit>
    </target>
	
	<target name="MazePathSolverTest" depends="MazeTest">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="test.MazePathSolverTest" todir="${junit.output.dir}"/>
            <classpath refid="Maze.classpath"/>
        </junit>
    </target>

	<target name="MazeTest">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="test.MazeTest" todir="${junit.output.dir}"/>
            <classpath refid="Maze.classpath"/>
        </junit>
    </target>
</project>